    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-page="/Products/Index">Products</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-page="/Services">Services</a>
